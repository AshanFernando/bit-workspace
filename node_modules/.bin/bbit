#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules/@teambit/bit/bin/node_modules:/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules/@teambit/bit/node_modules:/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules/@teambit/node_modules:/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules:/home/bituser/.bvm/versions/1.6.157/node_modules:/home/bituser/.bvm/versions/node_modules:/home/bituser/.bvm/node_modules:/home/bituser/node_modules:/home/node_modules:/node_modules:/workspaces/bit-workspace/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules/@teambit/bit/bin/node_modules:/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules/@teambit/bit/node_modules:/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules/@teambit/node_modules:/home/bituser/.bvm/versions/1.6.157/bit-1.6.157/node_modules:/home/bituser/.bvm/versions/1.6.157/node_modules:/home/bituser/.bvm/versions/node_modules:/home/bituser/.bvm/node_modules:/home/bituser/node_modules:/home/node_modules:/node_modules:/workspaces/bit-workspace/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@teambit/bit/bin/bit" "$@"
else
  exec node  "$basedir/../@teambit/bit/bin/bit" "$@"
fi
