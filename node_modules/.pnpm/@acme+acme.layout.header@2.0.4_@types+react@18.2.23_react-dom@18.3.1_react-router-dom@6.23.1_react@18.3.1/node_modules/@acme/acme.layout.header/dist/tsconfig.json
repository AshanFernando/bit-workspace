{
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom",
            "dom.Iterable"
        ],
        "target": "es2020",
        "module": "NodeNext",
        "jsx": "react-jsx",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "dist"
    },
    "exclude": [
        "artifacts",
        "public",
        "dist",
        "node_modules",
        "package.json",
        "**/*.cjs",
        "./dist"
    ],
    "include": [
        "**/*",
        "**/*.json"
    ]
}
